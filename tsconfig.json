{
    "compilerOptions": {
        "baseUrl": "src",
        "forceConsistentCasingInFileNames": true,
        "lib": ["es5", "dom", "dom.iterable", "es2015.iterable"],
        "module": "es2015",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "outDir": "dist",
        "rootDir": ".",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2015"
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "**/dist", "**/*.d.ts"]
}
