{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "tasks": [
        {
            "label": "build",
            "type": "npm",
            "script": "build",
            "problemMatcher": [
                "$node-sass",
                "$tsc",
                "$tslint5"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}